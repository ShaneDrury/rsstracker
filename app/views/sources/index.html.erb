<div class="container">
  <h1 class="title is-1">Sources</h1>
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>URL</th>
      <th>Active</th>
    </tr>
    </thead>
    <% @sources.each do |source| %>
      <tr>
        <td>
          <%= source.id %>
        </td>
        <td>
          <%= source.name %>
        </td>
        <td>
          <%= link_to source.url, source_url(source) %>
        </td>
        <td>
          <%= source.disabled ? "No" : "Yes" %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= form_for Source.new, builder: BulmaFormBuilder do |f| %>
    <%= f.text_field :url %>
    <%= f.text_field :source_type %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
</div>
