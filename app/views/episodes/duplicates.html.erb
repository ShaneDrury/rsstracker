<div class="container">
  <h1 class="title is-1">Duplicate Episodes</h1>
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Status</th>
      <th></th>
    </tr>
    </thead>
    <% @episodes.each do |episode| %>
      <tr>
        <td>
          <%= episode.id %>
        </td>
        <td>
          <%= link_to episode.name, episode_url(episode) %>
        </td>
        <td>
          <%= episode.fetch_status.status %>
        </td>
        <td>
          <%= form_for episode, method: :delete, builder: BulmaFormBuilder do |f| %>
            <%= f.confirmation_button(name: "Delete") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<% content_for :react do %>
  <%= javascript_pack_tag 'feed_form' %>
<% end %>
